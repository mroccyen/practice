<?xml version="1.0" encoding="UTF-8" ?>
<included xmlns="http://ch.qos.logback/xml/ns/logback"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://ch.qos.logback/xml/ns/logback
               https://raw.githubusercontent.com/enricopulatzo/logback-XSD/master/src/main/xsd/logback.xsd">
    <property name="logLevel" value="INFO"/>

    <property name="logPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%t] %logger{20} - %msg%n"/>
    <property name="appName" value="pitaya"/>
    <property name="maxFileSize" value="350MB"/>
    <property name="maxHistory" value="2"/>
    <property name="totalSizeCap" value="7GB"/>
    <property name="logPath" value="/applogs/${appName}/logs"/>
</included>